{
  "name": "pbt",
  "version": "1.0.0",
  "author": "Dan Maffiew <dmaffiew@gmail.com>",
  "scripts": {
    "lint": "tsc --noEmit && eslint .",
    "build": "yarn lint && yarn test && yarn clean && yarn build:typescript && yarn postbuild",
    "build:lcov": "yarn lint && yarn test:lcov && yarn clean && yarn build:typescript",
    "build:typescript": "tsc --build tsconfig.build.json && yarn postbuild",
    "test": "jest --runInBand --silent",
    "test:lcov": "jest --runInBand --silent --coverage --coverageReporters lcov --coverageDirectory ../coverage"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fast-check": "^2.23.2",
    "jest": "^27.5.1",
    "prettier": "^2.6.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3",
    "zod": "^3.14.3",
    "zod-fast-check": "^0.5.0"
  }
}
