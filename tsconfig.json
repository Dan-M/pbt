{
  "compilerOptions": {
    "outDir": "lib",
    "lib": [
      "ES2020"
    ],
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDir": "."
  },
  "include": [
    "src/**/**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
